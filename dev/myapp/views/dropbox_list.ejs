                                <td data-id='<%=Foldername%>'>
                                  <!-- <a href="/dropbox/<%=Foldername%>" id="Folder_<%=i%>" value="<%=Foldername%>"> -->

                                  <a href="#" onclick ="moveFolder(this)" value='<%=Foldername%>' ><%=oneItem.name%></a></td>
                                <td><%=oneItem.mimeType%></td>
                                <td><%=oneItem.modifiedTime%></td>
